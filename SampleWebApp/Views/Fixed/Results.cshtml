@{
    ViewBag.Title = "Fixed Results";
}

<h2>Results with Fix</h2>
<p>
    The request cookies typically shows an ASP Session cookie, that has been
    generated by the session system, even though it wasn't present in the
    actual request.
</p>
<p>
    There should also bee an ASP.Net.Cookies auth cookie, both in the cookies
    collection and as a cookie header.
</p>

<h2>Request.Cookies</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Request.Cookies.Count; i++)
        {
            var cookie = Request.Cookies[i];
            <tr>
                <td>@cookie.Name</td>
                <td>@cookie.Value</td>
            </tr>
        }
    </tbody>
</table>

<p>

</p>
<h2>Cookie Header</h2>
@if (Request.Headers["Cookie"] == null)
{
    <em>No Set-Cookie header found in request.</em>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cookie in Request.Headers["Cookie"].Split(';'))
            {
                var segments = cookie.Split('=');
                <tr>
                    <td>@segments[0]</td>
                    <td>@segments[1]</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    @Html.ActionLink("Restart Test", "Index", "Fixed", null, new { @class = "btn btn-default" })
</p>